{
    "version": 2,
    "builds": [
      {
        "src": "frontend/dist/frontend/browser/(.*)",
        "use": "@vercel/static"
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "backend/server.js"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' 'unsafe-inline' data:; img-src 'self' data:;"
          }
        ]
      }
    ]
  }